{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": "airbnb",
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "semi": ["error", "never"],
    "no-restricted-syntax": ["error", "never"],
    "no-prototype-builtins": "off",
    "arrow-parens": "off",
    "no-plusplus": "off",
    "no-underscore-dangle": "off",
    "no-continue": "off",
    "no-param-reassign": "off"
  }
}
